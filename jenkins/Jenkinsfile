pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            steps {
                dir('backtracker-backend') {
                    sh '''
                        docker run --rm \
                        -v $PWD:/app \
                        -w /app \
                        snakee/golang-junit:1.21 \
                        go test -v ./...
                    '''
                }
            }
        }
    }
}
